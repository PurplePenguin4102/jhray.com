    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <div id="particles-js" class="parallax__layer parallax__layer--back unselectable">
        <div id="position">
            <div id="jhray">JHRay</div>
            <div id="com">.Com</div>
        </div>
        <div id="thought_leader" class="unselectable">Hi... I'm Joey : </div>
    </div>
    <script src="~/js/particles.min.js"></script>
    <script src="~/js/app.js"></script>
    <div id="ARIGATO" class="parallax__layer parallax__layer--base">
        <div class="body-content container">
            <div class="row" style="margin-top:150px; text-align:center;">
                <div class="col-sm-4">
                    <a asp-action="ChilledESports" asp-controller="Home"><img style="width:300px; border:groove; border-color:darkgoldenrod; border-radius:100px" src="~/images/chilled_little.png" /></a>
